<!DOCTYPE html>
<html lang="en">
<head>

    <%- include("../partials/cabecalho") %>
    <%- include("../partials/menuBar") %>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Usuarios</title>
</head>
<body>

    <div class="container rounded mt-5 mb-5" style="height: 20pc">
        <div class="row">

            <div class="col-sm-12">
                
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">Nome</th>
                        <th scope="col">Email</th>
                        <th scope="col">Detalhar</th>
                        <th scope="col">Editar</th>
                        <th scope="col">Excluir</th>
                      </tr>
                    </thead>
                    <tbody>
            
                        <% usuarios.forEach(function(usuario) { %>
                            <tr>
                                <td scope="row"><%= usuario.nome%></td>
                                <td><%= usuario.email%></td>
                                <td>
                                    <a href="/usuarios/<%= usuario.email %>" type="button" class="btn btn-primary">
                                        Detalhar Usuario
                                    </a>
                                </td>
                                <td>
                                    <a href="/usuarios/cadastrar/<%= usuario.email %>" type="button" class="btn btn-warning">
                                        Editar Usuario
                                    </a>
                                </td>
                                <td>
                                    <a href="/usuarios/remover/<%= usuario.email %>" type="button" class="btn btn-danger">
                                        Excluir Usuario
                                    </a>
                                </td>
                            </tr>
                        <% }); %>
            
            
                    </tbody>
                </table>

            </div>
      </div>
    </div> 

    

</body>

    <%- include("../partials/rodape") %>
</html>